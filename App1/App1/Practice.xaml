        <Button Content="答题卡" HorizontalAlignment="Left" Margin="54,581,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.144,0.362"/>
        <ListBox HorizontalAlignment="Left" Height="243" Margin="54,297,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.491,0.56" Width="1340"/>
        <ListBox HorizontalAlignment="Left" Height="234" Margin="62,670,0,0" VerticalAlignment="Top" Width="1332"/>
        <ComboBox HorizontalAlignment="Left" Margin="166,187,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.225,0.348" Height="43" Width="221"/>
        <Button Content="结束练习开始考试" HorizontalAlignment="Left" Margin="62,932,0,0" VerticalAlignment="Top"/>
        <Button Content="返回" HorizontalAlignment="Left" Margin="23,10,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Page>
